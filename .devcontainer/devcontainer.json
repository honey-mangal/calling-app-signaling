{
  "name": "Flutter + Android Emulator",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "ms-vscode.cpptools"            // for native debugging if needed
      ]
    }
  },
  "forwardPorts": [
    8080, 8081,        // Flutter web and DevTools
    5037,              // ADB
    5554, 5555         // Emulator console & adb
  ],
  "postCreateCommand": "flutter doctor -v"
}